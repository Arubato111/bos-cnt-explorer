{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2023"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["app", "lib", "styles", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
